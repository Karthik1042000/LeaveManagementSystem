@model List<LeaveManagementSystem.Models.RoleModel>

@{
    ViewData["Title"] = "Role Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/list.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>@ViewData["Title"]</h1>
            <a href="/Role/RoleForm?id=0" class="btn-primary">Add Role</a>
        </div>

        <table id="dataTable" class="display">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>
                            <div class="action-buttons">
                                <a href="@Url.Action("RoleForm", "Role", new { id = role.Id })" class="btn-update"> Edit </a>
                                <a href="@Url.Action("Delete", "Role", new { id = role.Id })" class="btn-delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
