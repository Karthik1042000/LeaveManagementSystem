@model SignIn

@{
    ViewData["Title"] = "SignIn"; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/signIn.css" rel="stylesheet" />
    
</head>
<body>
    <div class="form-container">
        <h2>Sign In</h2> 
        @using (Html.BeginForm("SignIn", "Home", FormMethod.Post, new { id = "signInForm" }))
        {
            <div class="form-group">
                <label for="idWithoutShadow" class="input-label">Employee ID:</label>
                @Html.TextBoxFor(m => m.Id, new { id = "id", @class = "form-control input-field", placeholder = "Employee ID", @onfocus = "validateEmployeeId()" })
                <span id="employeeIdError" class="text-danger" style="display:none;">Employee ID must be exactly 9 characters.</span>
            </div>

            <div class="form-group">
                <label for="passwordWithoutShadow" class="input-label">Password:</label>
                @Html.PasswordFor(m => m.Password, new { id = "password", @class = "form-control input-field", placeholder = "Password", @onfocus = "validatePassword()" })
                <span id="passwordError" class="text-danger" style="display:none;">Password must be greater than 5 characters.</span>
            </div>

            <div class="form-group checkbox-group">
                <input type="checkbox" onclick="togglePasswordVisibility()" />
                <label>Show Password</label>
            </div>

            <div class="btn-center">
                <button type="submit" id="signInButton" disabled>Sign In</button>
            </div>
        }
    </div>
    <script src="~/js/home/signIn.js"></script>

</body>
</html>
