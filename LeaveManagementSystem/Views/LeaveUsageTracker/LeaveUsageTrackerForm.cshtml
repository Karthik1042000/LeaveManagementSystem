@model LeaveManagementSystem.Models.LeaveUsageTrackerModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/form.css" rel="stylesheet" />
</head>
<body>
    <div class="leave-record-container">
        <h1>@(ViewBag.IsViewOnly ? "Edit Leave Usage" : "Leave Usage")</h1>

        <form id="leaveTrackForm" action="/save" method="POST">
            <input type="hidden" id="idField" name="id" value="@Model.Id" />

            <div class="form-group">
                <label for="employeeIdField">Employee Id:</label>
                <input type="text" id="employeeIdField" name="employeeId" class="form-control" value="@Model.EmployeeId" disabled required />
            </div>

            <div class="form-group">
                <label for="employeeNameField">Name:</label>
                <input type="text" id="employeeNameField" name="employeeName" class="form-control" value="@Model.EmployeeName" disabled required />
            </div>

            <div class="form-group">
                <label for="annualLeaveField">Annual Leave Used:</label>
                <input type="number" id="annualLeaveField" name="annualLeave" class="form-control" value="@Model.ALUsed" @(!ViewBag.IsViewOnly ? "disabled" : "") required />
                <div id="annualLeaveError" class="error">Please enter a valid number of annual leave days.</div>
            </div>

            <div class="form-group">
                <label for="casualLeaveField">Casual Leave Used:</label>
                <input type="number" id="casualLeaveField" name="casualLeave" class="form-control" value="@Model.CLUsed" @(!ViewBag.IsViewOnly ? "disabled" : "") required />
                <div id="casualLeaveError" class="error">Please enter a valid number of casual leave days.</div>
            </div>

            <div class="form-group">
                <label for="restrictedHolidayField">Restricted Holiday Used:</label>
                <input type="number" id="restrictedHolidayField" name="restrictedHoliday" class="form-control" value="@Model.RHUsed" @(!ViewBag.IsViewOnly ? "disabled" : "") required />
                <div id="restrictedHolidayError" class="error">Please enter a valid number of restricted holidays.</div>
            </div>

            <div class="form-group">
                <label for="bonusLeaveField">Bonus Leave Used:</label>
                <input type="number" id="bonusLeaveField" name="bonusLeave" class="form-control" value="@Model.BLUsed" @(!ViewBag.IsViewOnly ? "disabled" : "") required />
                <div id="bonusLeaveError" class="error">Please enter a valid number of bonus leave days.</div>
            </div>

            
                <div class="form-group">
                    <label for="pendingAnnualLeaveField">Pending Annual Leave:</label>
                <input type="number" id="pendingAnnualLeaveField" name="pendingAnnualLeave" class="form-control" value="@Model.ALPending" disabled required />
                </div>

                <div class="form-group">
                    <label for="pendingCasualLeaveField">Pending Casual Leave:</label>
                <input type="number" id="pendingCasualLeaveField" name="pendingCasualLeave" class="form-control" value="@Model.CLPending" disabled required />
                </div>

                <div class="form-group">
                    <label for="pendingRestrictedHolidayField">Pending Restricted Holiday:</label>
                <input type="number" id="pendingRestrictedHolidayField" name="pendingRestrictedHoliday" class="form-control" value="@Model.RHPending" disabled required />
                </div>

                <div class="form-group">
                    <label for="pendingBonusLeaveField">Pending Bonus Leave:</label>
                <input type="number" id="pendingBonusLeaveField" name="pendingBonusLeave" class="form-control" value="@Model.BLPending" disabled required />
                </div>

            <div class="buttons-group">
                @if (ViewBag.IsViewOnly)
                {
                    <button type="submit" id="submitButton" class="btn-primary"> Save </button>
                }
            </div>
        </form>
    </div>
    <script src="~/js/leaveUsageTracker/usageTrackerForm.js"></script>
</body>
</html>
