@model ProfileModel 

@{
    ViewData["Title"] = "Employee Profile";
}

<link href="~/css/profile.css" rel="stylesheet"/>

<h2>Employee Profile</h2>

<div class="profile-container">
    @using (Html.BeginForm("Save", "Employee", FormMethod.Post, new { id = "profileForm", onsubmit = "return formSubmit(event);" })) // Update action and controller names as necessary
    {
        <div class="form-group">
            <label for="id">Employee Id:</label>
            @Html.TextBoxFor(m => m.Id, new { @id = "employeeId", @class = "form-control", disabled = "disabled" })
        </div>

        <div class="form-group">
            <label for="name">Name:</label>
            @Html.TextBoxFor(m => m.Name, new { @id = "name", @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            @Html.TextBoxFor(m => m.Email, new { @id = "email", @class = "form-control", disabled = "disabled" })
        </div>

        <div class="form-group">
            <label for="role">Role:</label>
            @Html.TextBoxFor(m => m.RoleName, new { @id = "role", @class = "form-control", disabled = "disabled" })
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            @Html.TextBoxFor(m => m.Password, new { @id = "password", @class = "form-control"})
        </div>

        <div class="form-group buttons-group">
            <button type="button" class="btn btn-primary" id="backButton" onclick="window.location.href='/Home/Index';">Back to Home</button>
            <button type="submit" class="btn btn-primary" id="saveChangesButton" disabled="disabled">Save</button>
        </div>

    }
    <script src="~/js/employee/profile.js"></script>
</div>
