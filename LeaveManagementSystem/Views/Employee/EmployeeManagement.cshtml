@model List<EmployeeModel>

@{
    ViewData["Title"] = "Employee Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/list.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>@ViewData["Title"]</h1>
            <a href="/Employee/EmployeeForm?id=" class="btn-primary">Add Employee</a>
        </div>

        <table id="dataTable" class="display">
            <thead>
                <tr>
                    <th>Employee Id</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Email</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.Id</td>
                        <td>@record.Name</td>
                        <td>@record.Role</td>
                        <td>@record.Email</td>
                        <td>
                            <div class="action-buttons center-buttons">
                                <a href="@Url.Action("EmployeeForm", "Employee", new { id = record.Id })" class="btn-update"> Edit </a>
                                <a href="@Url.Action("Delete", "Employee", new { id = record.Id })" class="btn-delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
